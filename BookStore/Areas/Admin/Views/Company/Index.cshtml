@model List<Company>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.StreetAddress</td>
                        <td>@item.City</td>
                        <td>@item.State</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <a asp-controller="Company" asp-action="UpdateCompany" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Company" asp-action="DeleteCompany" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                        <td></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/company.js"></script>
}
